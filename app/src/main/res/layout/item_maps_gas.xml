<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:contentPadding="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/gas_nombre"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="match_parent"
            android:text="nombre"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/gas_direccion"
            android:textSize="13sp"
            android:text="direccion"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@color/secondaryDarkColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gas_colonia"
            android:textSize="13sp"
            android:text="Colonia"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@color/secondaryDarkColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/gas_status"
            android:textSize="13sp"
            android:text="Disponible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:id="@+id/btn_gas_goToRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_alt_route"
            android:text="Indicaciones"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>